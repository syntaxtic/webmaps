{
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "rules": {
    "no-unused-vars": ["warn", { "vars": "all", "args": "none" }],
    "one-var": ["warn", "never"],
    "no-unneeded-ternary": "warn",
    "eqeqeq": "warn",
    "prefer-const": "warn",
    "array-callback-return": ["warn", { "checkForEach": true }],
    "no-constant-binary-expression": "warn"
  }
}
